/*new box testing*/
/*The padding 5px (in parent) and margin 5px (in children) sets some space between children*/

.portfolio__container {
    display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display:flex;
    webkit-flex: 1 0 ;
    webkit-flex-direction: column;
    webkit-flex-wrap:wrap;
    flex: 1 0 ;
    flex-direction: column;
    flex-wrap:wrap;
    padding: 5px;
}



.portfolio__container img {
    width: 80%;
}

.portfolio__desc {
    text-align: center;
}

.portfolio__box {
    display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display:flex;
    webkit-flex-direction: column;
    flex-direction: column;
    align-items: center;
}

.portfolio__box1 {
    background-color: var(--light-green);
    margin: 5px;

}
.portfolio__box2 {
    background-color: var(--light-blue);
    margin: 5px;
}
.portfolio__box3 {
    background-color: var(--light-sand);
    margin: 5px;
}

@media only screen and (min-width: 700px) {
    .portfolio__container {
        webkit-flex-direction:row;
        flex-direction:row;

    }
    .portfolio__box {
    webkit-flex: 1 1 48%;
    flex: 1 1 48%;
